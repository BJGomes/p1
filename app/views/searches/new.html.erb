<script src="//maps.google.com/maps/api/js?key=AIzaSyAMfvju4RRo8UACFBBJfvxVK6vbP9tUwA4"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<script src='//cdn.jsdelivr.net/gmaps4rails/2.1.2/gmaps4rails.js'> </script>

<fieldset>
    <legend> Search </legend>
    <!-- :url => url_for(:controller => "searches", :action => "create") -->
    <%= form_for @search do |f| %>
        <%= label_tag(:name, "Name: ") %>
        <%= f.text_field :name %>
        <%= label_tag(:place, " in: ") %>
        <%= f.text_field :place %>
        <%= f.submit "Search"%>
    <% end %>
</fieldset>

<fieldset>
    <legend> Most Searched Results </legend>
        <%= render 'carousel', :img1 => "r1", :img2 => "r2", :img3 => "r3" %>
</fieldset>

<h2>Results for: <b><%= @name %></b> in: <b><%= @place %></b></h2>

<div style='width: 800px;'>
  <div id="rails_map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'rails_map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>

<%= render 'results', :ypentries => @ypentries %>